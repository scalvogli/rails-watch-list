<div class="container">
  <h1><%= @list.name.capitalize %></h1>
    <p><%= link_to "Add a bookmark", new_list_bookmark_path(@list) %></p>
    <p><%= link_to "Back to All lists", lists_path %></p>
  <div class="row my-3"></div>
  <% @list.bookmarks.each do |bookmark| %>
      <strong><p><%= bookmark.movie.title %></p>
      <p><%= bookmark.movie.rating %><i class="fas fa-star star-yellow"></i></strong></p>
      <p><%= bookmark.movie.overview %> - <%= link_to "delete", bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure you want to remove" } %></small></p>
      <p><%= image_tag bookmark.movie.poster_url, alt: bookmark.movie.title %></p>
  <% end %>

</div>
